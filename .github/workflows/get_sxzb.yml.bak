name: Get Sxzb

on:
  schedule:
    - cron: '0 */6 * * *'  # 每 6 小时运行一次
      timezone: Asia/Shanghai  # 设置时区为上海（北京）时间
  workflow_dispatch:  # 手动触发

jobs:
  get_streams:
    runs-on: ubuntu-latest

    steps:
    - name: Check out code
      uses: actions/checkout@v2

    - name: Set up Python
      uses: actions/setup-python@v2
      with:
        python-version: '3.x'

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install requests

    - name: Create 和 Run Python script
      run: |
        echo "import requests" > get_iptv.py
        echo "" >> get_iptv.py
        echo "# 定义两个 URL" >> get_iptv.py
        echo "urls = [" >> get_iptv.py
        echo "    \"https://tv.wekh.eu.org/sxzb.txt\"," >> get_iptv.py
        echo "    \"https://tv.wekh.eu.org/itv.txt\"" >> get_iptv.py
        echo "]" >> get_iptv.py
        echo "" >> get_iptv.py
        echo "# 要剔除的频道名称" >> get_iptv.py
        echo "channels_to_remove = [\"凤凰香港\", \"凤凰中文\", \"凤凰资讯\"]" >> get_iptv.py
        echo "" >> get_iptv.py
        echo "# 打开文件以写入模式" >> get_iptv.py
        echo "with open(\"tvlive/iptv.txt\", \"w\") as file:" >> get_iptv.py  # 修改文件路径
        echo "    for index, url in enumerate(urls):" >> get_iptv.py
        echo "        try:" >> get_iptv.py
        echo "            response = requests.get(url)" >> get_iptv.py
        echo "            response.raise_for_status()  # 检查请求是否成功" >> get_iptv.py
        echo "            playlist = response.text" >> get_iptv.py
        echo "" >> get_iptv.py
        echo "            # 在每个 #genre# 后面添加 ,https://tv.wekh.eu.org/epg" >> get_iptv.py
        echo "            playlist = playlist.replace(\"#genre#\", \"#genre#,https://tv.wekh.eu.org/epg\")" >> get_iptv.py
        echo "" >> get_iptv.py
        echo "            # 仅在处理第一个链接时剔除指定频道" >> get_iptv.py
        echo "            if index == 0:" >> get_iptv.py
        echo "                lines = playlist.splitlines()" >> get_iptv.py
        echo "                # 下面这一行是剔除频道的代码" >> get_iptv.py
        echo "                filtered_lines = [line for line in lines if not any(channel in line for channel in channels_to_remove)]" >> get_iptv.py
        echo "                playlist = \"\\n\".join(filtered_lines)" >> get_iptv.py
        echo "" >> get_iptv.py
        echo "            # 检查最后一行是否为空行" >> get_iptv.py
        echo "            if not playlist.endswith('\\n'):" >> get_iptv.py
        echo "                playlist += '\\n'" >> get_iptv.py
        echo "" >> get_iptv.py
        echo "            # 写入 URL 内容" >> get_iptv.py
        echo "            file.write(playlist)" >> get_iptv.py
        echo "" >> get_iptv.py
        echo "            print(f\"内容已成功从 {url} 保存到 tvlive/iptv.txt 文件中\")" >> get_iptv.py  # 修改打印信息
        echo "" >> get_iptv.py
        echo "        except requests.exceptions.RequestException as e:" >> get_iptv.py
        echo "            print(f\"请求失败: {url} - {e}\")" >> get_iptv.py
        echo "" >> get_iptv.py
        echo "print(\"所有内容已处理完毕\")" >> get_iptv.py

        python get_iptv.py

    - name: Commit 和 push changes
      run: |
        git config --local user.email "action@github.com"
        git config --local user.name "GitHub Action"
        git add tvlive/iptv.txt  # 修改文件路径
        git commit -m "Update live streams playlist" --allow-empty
        git push
